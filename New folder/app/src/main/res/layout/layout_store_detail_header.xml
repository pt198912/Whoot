<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_store_detail_header"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="25dp">
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="21sp"
        android:textColor="@color/card_cc"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_name_en"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="13sp"
        android:textColor="@color/main_tab_defaule"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/px_10"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/car_item_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/home_shape_f77119"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text=""
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/card_item_img0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/px_10"
                android:background="@drawable/icon_star_10" />

            <ImageView
                android:id="@+id/card_item_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/px_10"
                android:background="@drawable/icon_star_10" />

            <ImageView
                android:id="@+id/card_item_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/px_10"
                android:background="@drawable/icon_star_10" />

            <ImageView
                android:id="@+id/card_item_img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/px_10"
                android:background="@drawable/icon_star_10" />

            <ImageView
                android:id="@+id/card_item_img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/px_10"
                android:background="@drawable/icon_star_10" />
        </LinearLayout>

        <TextView
            android:id="@+id/car_item_score_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:textColor="@color/main_tab_defaule"
            android:layout_weight="1"
            android:text="@string/home_item_fen" />


    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_dish_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_gold"
            android:textSize="12sp"
            android:background="@drawable/light_orange_rect_radius_5"
            android:text=""
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"/>
        <TextView
            android:id="@+id/tv_open_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_gold"
            android:textSize="12sp"
            android:background="@drawable/light_orange_rect_radius_5"
            android:text=""
            android:visibility="gone"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/tv_average_consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_gold"
            android:textSize="12sp"
            android:background="@drawable/light_orange_rect_radius_5"
            android:text=""
            android:visibility="visible"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/tv_price_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_gold"
            android:textSize="12sp"
            android:background="@drawable/light_orange_rect_radius_5"
            android:text=""
            android:visibility="gone"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/storedetail_icon_location"/>
            <TextView
                android:id="@+id/tv_store_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/card_cc"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/storedetail_icon_arrow"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_store_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text=""
            android:layout_marginLeft="25dp"
            android:textColor="@color/main_tab_defaule"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/storedetail_icon_phone"/>
        <TextView android:id="@+id/tv_store_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:textColor="@color/card_cc"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/storedetail_icon_arrow"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_detail_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="22dp">
    <TextView android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/detail_information"
        android:textSize="13sp"

        android:layout_marginLeft="25dp"
        android:textColor="@color/main_gold"/>
        <ImageView
            android:id="@+id/iv_expand_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/arrow_down"/>
    </LinearLayout>
    <include layout="@layout/layout_store_detail_info"
        android:visibility="gone"/>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>