<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_15"
        android:layout_marginBottom="@dimen/px_6"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30">
            <ImageView
                android:id="@+id/favour_img"
                android:layout_width="@dimen/px_250"
                android:layout_height="@dimen/px_180"

                android:layout_gravity="center"
                android:background="@drawable/storedetail_topfive_blank_pic"/>

            <ImageView
                android:id="@+id/favour_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/me_myfavourite_icon_checkbox_s" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:orientation="vertical">
            <TextView
                android:id="@+id/favour_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/text_color_black_v1"
                android:textSize="16sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/favour_item_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:paddingLeft="@dimen/px_20"
                    android:paddingRight="@dimen/px_20"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/favour_item_score_too"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:textColor="@color/color_fc4c1a" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/favour_ex_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/px_10"
                        android:background="@drawable/icon_star_10" />

                    <ImageView
                        android:id="@+id/favour_ex_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/px_10"
                        android:background="@drawable/icon_star_10" />

                    <ImageView
                        android:id="@+id/favour_ex_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/px_10"
                        android:background="@drawable/icon_star_10" />

                    <ImageView
                        android:id="@+id/favour_ex_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/px_10"
                        android:background="@drawable/icon_star_10" />

                    <ImageView
                        android:id="@+id/favour_ex_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/px_10"
                        android:background="@drawable/icon_star_10" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/favour_ping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px_50"
                    android:textSize="11sp"
                    android:text="(1214 Ratings)"/>
                <TextView
                    android:id="@+id/favour_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="0.5km"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_10"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/favour_cai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:text="Thai Cuisine"/>
                    <LinearLayout
                        android:id="@+id/favour_img_ly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/favour_mon_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="@dimen/px_50"
                            />
                        <ImageView
                            android:id="@+id/favour_mon_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="@dimen/px_10"
                            />
                        <ImageView
                            android:id="@+id/favour_mon_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="@dimen/px_10"
                            />
                        <ImageView
                            android:id="@+id/favour_mon_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="@dimen/px_10"
                            />
                        <ImageView
                            android:id="@+id/favour_mon_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_10"
                            />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/favour_dele"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/px_30"
                    android:visibility="invisible"
                    android:background="@drawable/searchlist_icon_delete"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>
</LinearLayout>