<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="11dp"
    app:cardElevation="0dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="7dp"
            >
            <FrameLayout android:layout_width="83dp"
                android:layout_height="69dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_store_logo"
                android:layout_width="83dp"
                android:layout_height="69dp"
                app:riv_corner_radius="4dp"
                android:scaleType="centerCrop"
                app:riv_mutate_background="true"
                android:background="@drawable/storedetail_topfive_blank_pic"
                />
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/dark_tranparent"
                    android:layout_gravity="bottom">
                    <ImageView
                        android:id="@+id/iv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/home_icon_time"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/tv_store_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:text="@string/soon" />
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/frag_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="ax"
                        android:textColor="@color/color_515151"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/frag_item_nameEn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_10"
                        android:layout_marginRight="@dimen/px_30"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="@color/color_9c9c9c"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/frag_item_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_30"
                        android:background="@drawable/home_shape"
                        android:paddingLeft="@dimen/px_20"
                        android:paddingRight="@dimen/px_20"
                        android:text="4.8"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <ImageView
                            android:id="@+id/item_ex_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/icon_star_10" />

                        <ImageView
                            android:id="@+id/item_ex_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/px_10"
                            android:background="@drawable/icon_star_10" />

                        <ImageView
                            android:id="@+id/item_ex_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/px_10"
                            android:background="@drawable/icon_star_10" />

                        <ImageView
                            android:id="@+id/item_ex_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/px_10"
                            android:background="@drawable/icon_star_10" />

                        <ImageView
                            android:id="@+id/item_ex_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/px_10"
                            android:background="@drawable/icon_star_10" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/frag_item_score_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_10"
                        android:text=""
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/color_9c9c9c"
                         />
                    <TextView
                        android:id="@+id/frag_item_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/px_10"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:textSize="11sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text=""
                        android:textColor="@color/color_9c9c9c" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/px_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/frag_item_dish"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/light_orange_rect_radius_5"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:textSize="11sp"
                        android:text="酒吧"
                        android:textColor="@color/color_fc4c1a" />

                    <TextView
                        android:id="@+id/tv_average_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/px_10"
                        android:background="@drawable/light_orange_rect_radius_5"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:textSize="11sp"
                        android:text=""
                        android:textColor="@color/color_fc4c1a" />



                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_exchange_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_tag_redeemable"
            android:gravity="center"
            android:text="@string/exchange_one"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_exchange_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="5dp"
            android:scrollbars="none" />
    </LinearLayout>

</android.support.v7.widget.CardView>
