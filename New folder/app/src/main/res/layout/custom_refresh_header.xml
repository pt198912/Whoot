<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout"
    android:gravity="center"
   >
    <FrameLayout
        android:id="@+id/fl_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/srl_classics_arrow"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/load_1"
        />

    <ImageView
        android:id="@+id/srl_classics_progress"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/progressbar"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/srl_classics_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_toRightOf="@+id/fl_logo"
        android:layout_centerVertical="true"
        android:visibility="visible">
        <TextView
            android:id="@+id/srl_classics_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#999999"
            android:visibility="visible"
            android:textSize="12sp"
            android:text="@string/listview_header_hint_normal"/>
        <TextView
            android:id="@+id/srl_classics_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#666666"
            android:textSize="12sp"
            android:visibility="gone"
            android:text="@string/srl_header_update"/>
    </LinearLayout>


</RelativeLayout>