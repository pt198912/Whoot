<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/coup_head"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_400"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/px_40"
                    android:background="@drawable/home_blank_pic"
                    tools:ignore="ContentDescription" />
                <com.donkingliang.banner.CustomBanner
                    android:id="@+id/coupdata_head"
                    android:layout_marginTop="@dimen/px_40"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_400"
                    app:indicatorStyle="ORDINARY"
                    app:indicatorGravity="CENTER"
                    android:visibility="gone"
                    app:indicatorSelectRes="@drawable/shape_point_select"
                    app:indicatorUnSelectRes="@drawable/shape_point_unselect"
                    app:indicatorInterval="5dp"/>
                <TextView
                    android:id="@+id/frag_item_coup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/loginpage_btn_arrow"
                    android:padding="@dimen/px_10"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/coup_exc_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:gravity="center"
                android:text=""
                android:textColor="@color/card_cc"
                android:layout_marginRight="@dimen/px_30"
                android:layout_marginLeft="@dimen/px_30"
                android:textSize="19sp"
                android:textStyle="bold" />
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                >
            <TextView  android:id="@+id/tv_food_desc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textColor="@color/card_cc"
                android:layout_marginLeft="30dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="13sp"
                />
                <ImageView android:id="@+id/iv_expand_food_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:visibility="invisible"
                    android:paddingLeft="10dp"
                    android:src="@drawable/arrow_down"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/frag_item_woke"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_below="@+id/frag_item_coup"

                android:layout_gravity="center"
                android:layout_marginTop="@dimen/px_30"
                android:elevation="4dp"
                android:translationZ="2dp"
                android:visibility="gone"
                />
            <!--android:layout_below="@+id/frag_item_coup"
            android:elevation="4dp"
                android:translationZ="2dp"-->



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <ImageView
                android:id="@+id/frag_item_img"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_gravity="center"
                />
                <LinearLayout
                    android:id="@+id/ll_write_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/login_deng"
                    android:paddingRight="9dp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="4dp">
                    <ImageView android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:src="@drawable/token_icon_bronze"
                        android:layout_marginLeft="2dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="visible"
                    android:text="@string/write_review"
                    android:textColor="@color/white"
                    />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_invite_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/login_deng"
                    android:paddingRight="9dp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="4dp">
                    <ImageView android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:src="@drawable/token_icon_gold"
                        android:layout_marginLeft="2dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="visible"
                        android:textSize="12sp"
                        android:text="@string/invite_to_get_token"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/frag_item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="@string/action_sign_in_short"
                    android:paddingBottom="@dimen/px_15"
                    android:paddingLeft="@dimen/px_80"
                    android:paddingRight="@dimen/px_80"
                    android:paddingTop="@dimen/px_20"
                    android:textColor="@color/white"
                    android:background="@drawable/login_deng"
                    />
            </FrameLayout>

            <TextView
                android:id="@+id/coup_txt_tix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                android:gravity="center"
                android:layout_marginTop="@dimen/px_20"
                android:text="@string/code_qr"
                android:textColor="@color/main_tab_defaule"
                android:textSize="13sp"
                android:visibility="gone"
                />

            <LinearLayout
                android:id="@+id/coup_exc_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_4"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/coup_txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/main_gold"
                    android:textSize="13sp" />


                <com.app.whoot.ui.view.custom.TimerTextView
                    android:id="@+id/coup_exc_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_10"
                    android:text=""
                    android:textColor="@color/main_gold"
                    android:textSize="13sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/px_30"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rewards"
                    android:textColor="@color/card_cc"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/coup_img"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        tools:ignore="ContentDescription"
                         />

                    <TextView
                        android:id="@+id/coup_txt_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/card_cc"
                        android:text=" " />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/deta_xiang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/px_40"
                android:text="@string/detail"
                android:textColor="@color/card_cc"
                android:textSize="16sp"
                android:visibility="gone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coup_txt_descri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/px_20"
                android:textColor="#333333"
                android:layout_marginRight="@dimen/px_30"
                android:textSize="16sp"
                android:visibility="gone"/>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                >
                <TextView android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/label_exchange_today_progress"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/card_cc"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_height="wrap_content"/>
                <FrameLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="7dp"
                    >
                    <ProgressBar
                        android:id="@+id/pb_exchange_progress"
                        android:layout_width="106dp"
                        android:layout_height="15dp"
                        android:progress="0"
                        android:max="10"
                        android:layout_gravity="center_vertical"
                        style="@style/MyProgressBarStyleHorizontal"/>
                    <TextView
                        android:id="@+id/tv_exchange_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/card_cc"
                        android:textSize="13sp"
                        android:layout_gravity="right"
                        android:layout_marginRight="9dp"/>
                </FrameLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/deta_ze"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="20dp"
                android:text="@string/terms"
                android:textColor="@color/card_cc"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coup_txt_term"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/px_30"
                android:text=""
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>