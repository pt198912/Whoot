<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/reward_popup_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@color/text_color_black_v1"
                android:textStyle="bold"
                android:text="@string/gong"/>
            <TextView
                android:id="@+id/login_type_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/card_cc"
                android:text="@string/you_coupon"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_type_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/px_20"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/login_coup_o"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:orientation="vertical">
                <FrameLayout android:layout_width="66dp"
                    android:layout_height="66dp">
                <ImageView
                    android:id="@+id/login_coup_img"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:background="@drawable/token_icon_bronze"/>
                    <ImageView android:layout_width="66dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:src="@drawable/reward_mask_bronze"/>
                    <TextView
                        android:id="@+id/login_coup_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:text=""
                        />
                </FrameLayout>
                <TextView
                    android:id="@+id/tv_brozen_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/color_222222"
                    android:textSize="11sp"
                    android:text="@string/reward_from_invited"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_type_ly_one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <FrameLayout android:layout_width="66dp"
                    android:layout_height="66dp">
                <ImageView
                    android:id="@+id/login_coup_img_one"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:background="@drawable/token_icon_silver"/>
                    <ImageView android:layout_width="66dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:src="@drawable/reward_mask_silver"/>
                    <TextView
                        android:id="@+id/login_coup_txt_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:text=""
                        />
                </FrameLayout>
                <TextView
                    android:id="@+id/tv_silver_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/color_222222"
                    android:textSize="11sp"
                    android:text="@string/reward_from_invited"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_type_ly_twe"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <FrameLayout android:layout_width="66dp"
                    android:layout_height="66dp">
                <ImageView
                    android:id="@+id/login_coup_img_twe"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:background="@drawable/token_icon_gold"/>
                    <ImageView android:layout_width="66dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:src="@drawable/reward_mask_gold"/>
                    <TextView
                        android:id="@+id/login_coup_txt_twe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:text=""
                        />
                </FrameLayout>
                <TextView
                    android:id="@+id/tv_gold_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/color_222222"
                    android:textSize="11sp"
                    android:text="@string/reward_from_invited"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/login_type_ly_three"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <FrameLayout android:layout_width="66dp"
                    android:layout_height="66dp">
                <ImageView
                    android:id="@+id/login_coup_img_three"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:background="@drawable/token_icon_diamond"/>
                    <ImageView android:layout_width="66dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:src="@drawable/reward_mask_diamond"/>
                    <TextView
                        android:id="@+id/login_coup_txt_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:text=""
                        />
                </FrameLayout>
                <TextView
                    android:id="@+id/tv_diamond_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/color_222222"
                    android:textSize="11sp"
                    android:text="@string/reward_from_invited"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/px_50"
            android:layout_marginBottom="@dimen/px_50"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_box_ly"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_red_solid_radius_20"
                android:text="@string/cha"
                android:gravity="center"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_join_event"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:visibility="gone"
                android:gravity="center"
                android:background="@drawable/bg_red_solid_radius_20"
                android:text="@string/label_join_even"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:id="@+id/login_finsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="@dimen/px_30"
        android:background="@drawable/popup_icon_close"/>
</LinearLayout>