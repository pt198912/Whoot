<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_30"
        android:background="@drawable/bg_shadow"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/gridview_img_one"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:riv_mutate_background="true"
            app:riv_corner_radius_top_left="5dp"
            app:riv_corner_radius_top_right="5dp"
            android:background="@drawable/storedetail_redemption_blankpic"
            />
            <ImageView
                android:id="@+id/iv_activity_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </FrameLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:visibility="gone"
            android:background="@drawable/storedetail_redemption_blankpic"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/px_20"
                android:gravity="center_vertical">
            <TextView
                android:id="@+id/gridview_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_20"

                android:textSize="15sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/card_cc"
                android:text="武大郎烧饼"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_20"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/gridview_img"
                    android:layout_width="@dimen/px_40"
                    android:layout_height="@dimen/px_40"
                    android:layout_gravity="center"

                    tools:ignore="ContentDescription"
                    />
                <TextView
                    android:id="@+id/gridview_txtx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_10"
                    android:textSize="13sp"
                    android:textColor="@color/map_colo"
                    android:layout_marginRight="@dimen/px_24"
                    android:text="x1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/gridview_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/px_10"
                    android:text="10/20"/>

            </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginTop="@dimen/px_10"
                android:layout_marginBottom="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                android:visibility="gone"
                android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_exchange_num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="asd"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="10sp"
                android:textColor="@color/main_gold"/>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_exchange"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="@dimen/px_20"
                android:text="@string/duihuan"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/px_40"
                android:layout_marginRight="@dimen/px_40"
                android:layout_marginBottom="@dimen/px_20"
                android:textSize="13sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="center"
                android:background="@drawable/login_deng"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>