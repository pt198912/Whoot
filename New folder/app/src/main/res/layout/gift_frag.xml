<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_time"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/frag_title_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/side_nav_bar"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/px_50">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/px_20"
            android:text="@string/gift"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/gift_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_30"
                android:text="@string/expired_to_to"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <!--Tab切换-->
    <LinearLayout
        android:id="@+id/gift_tab_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/gift_wei"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/px_20"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/gift_wei_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_marginBottom="@dimen/px_10"
                    android:background="@drawable/gifts_tab_icon_gift_big" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gift_yi"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/px_10"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/gift_yi_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_marginBottom="@dimen/px_10"
                    android:background="@drawable/gifts_tab_icon_gift_used" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gift_guo"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/px_20"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/gift_guo_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_marginBottom="@dimen/px_10"
                    android:background="@drawable/gifts_tab_icon_gift_expired" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/gift_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_30"
                android:layout_marginTop="@dimen/px_10"
                android:text="@string/clear_all" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/myViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white" />


    <!--登陆-->



            <LinearLayout
                android:id="@+id/frag_ly"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_bg"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/px_250"
                        android:background="@drawable/logo_login" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_80"
                    android:layout_marginRight="@dimen/px_80"
                    android:layout_marginTop="@dimen/px_200"
                    android:gravity="center"
                    android:text="@string/log_free"
                    android:textColor="@color/text_color_black_v1"
                    android:textStyle="bold"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_50"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/px_60"
                    android:layout_marginRight="@dimen/px_60"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gift_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/log_shape"
                        android:paddingBottom="@dimen/px_20"
                        android:paddingLeft="@dimen/px_90"
                        android:paddingRight="@dimen/px_90"
                        android:paddingTop="@dimen/px_20"
                        android:text="@string/log_in"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/gift_sign_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_20"
                        android:background="@drawable/sign_shape"
                        android:paddingBottom="@dimen/px_20"
                        android:paddingLeft="@dimen/px_90"
                        android:paddingRight="@dimen/px_90"
                        android:paddingTop="@dimen/px_20"
                        android:text="@string/sign"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/frag_facce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_60"
                    android:layout_marginRight="@dimen/px_60"
                    android:layout_marginTop="@dimen/px_20"
                    android:background="@drawable/login_shape"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px_20"
                        android:layout_marginLeft="@dimen/px_50"
                        android:layout_marginTop="@dimen/px_20"
                        android:background="@drawable/login_btn_facebook" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_100"
                        android:text="@string/facebook_l"
                        android:textSize="18sp"
                        android:textColor="@color/white" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/gift_login_google"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_60"
                    android:layout_marginRight="@dimen/px_60"
                    android:layout_marginTop="@dimen/px_20"
                    android:visibility="gone"
                    android:background="@drawable/google_shape"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px_20"
                        android:layout_marginLeft="@dimen/px_50"
                        android:layout_marginTop="@dimen/px_20"
                        android:background="@drawable/login_btn_google" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_90"
                        android:text="@string/google_l"
                        android:textColor="@color/main_tab_defaule"
                        android:textSize="18sp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/gift_login_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_60"
                    android:layout_marginRight="@dimen/px_60"
                    android:layout_marginTop="@dimen/px_50"
                    android:gravity="center"
                    android:text="" />

            </LinearLayout>


    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_e_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:visibility="gone" />


</LinearLayout>