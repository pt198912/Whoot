<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    >


    <LinearLayout
        android:id="@+id/gift_rewar_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/giftlink_nologin_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/px_350"
            android:orientation="vertical">
            <TextView
                android:id="@+id/gift_rewar_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_color_black_v1"
                android:text="@string/gift_one"/>
            <TextView
                android:id="@+id/gift_rewar_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:text="@string/fenxiang_o"/>

            <LinearLayout
                android:id="@+id/gift_frag_facce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_80"
                android:layout_marginRight="@dimen/px_80"
                android:layout_marginTop="@dimen/px_50"
                android:layout_marginBottom="@dimen/px_40"
                android:background="@drawable/login_shape"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px_20"
                    android:layout_marginTop="@dimen/px_20"
                    android:background="@drawable/login_btn_facebook" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_30"
                    android:text="@string/facebook_l"
                    android:textColor="@color/white" />
            </LinearLayout>

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_e_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:visibility="gone"
                android:layout_marginTop="30dp" />
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:id="@+id/vox_finsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="@dimen/px_30"
        android:background="@drawable/popup_icon_close"/>
</LinearLayout>