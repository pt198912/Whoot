<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_time"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/frag_card_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/side_nav_bar"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/px_50">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/px_20"
                android:text="@string/copp"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="visible">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:id="@+id/card_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/card_clear_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/px_40"
                        android:src="@drawable/token_topnav_icon_rules" />
                    <TextView
                        android:id="@+id/card_clear_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_marginTop="@dimen/px_10"
                        android:visibility="gone"
                        android:text="@string/clear_all" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--Tab切换-->

        <LinearLayout
            android:id="@+id/card_tab_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/card_wei"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="@dimen/px_30"
                    android:paddingBottom="@dimen/dp_10"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_unuesd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/unuse"
                        android:textSize="15sp"
                        android:textColor="@color/card_cc"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_yi"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/px_30"
                    android:paddingBottom="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_uesd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/used"
                        android:textSize="15sp"
                        android:textColor="@color/card_cc"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/card_guo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/px_30"
                    android:paddingBottom="@dimen/dp_10"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_useless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/expired_yi"
                        android:textSize="15sp"
                        android:textColor="@color/card_cc"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/cardViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white" />

    <!--登录界面-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_bg"
                android:visibility="gone"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/px_250"
                        android:background="@drawable/logo_login" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_60"
                    android:layout_marginRight="@dimen/px_60"
                    android:layout_marginTop="@dimen/px_200"
                    android:gravity="center"
                    android:text="@string/log_free"
                    android:textColor="@color/text_color_black_v1"
                    android:textStyle="bold"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_50"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/px_60"
                    android:layout_marginRight="@dimen/px_60"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/card_my_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/log_shape"
                        android:paddingBottom="@dimen/px_20"
                        android:paddingLeft="@dimen/px_90"
                        android:paddingRight="@dimen/px_90"
                        android:paddingTop="@dimen/px_20"
                        android:text="@string/log_in"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/card_my_sign_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_20"
                        android:background="@drawable/sign_shape"
                        android:paddingBottom="@dimen/px_20"
                        android:paddingLeft="@dimen/px_90"
                        android:paddingRight="@dimen/px_90"
                        android:paddingTop="@dimen/px_20"
                        android:text="@string/sign"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/card_my_login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/card_my_login_facce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_60"
                    android:layout_marginRight="@dimen/px_60"
                    android:layout_marginTop="@dimen/px_20"
                    android:background="@drawable/login_shape"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px_20"
                        android:layout_marginLeft="@dimen/px_50"
                        android:layout_marginTop="@dimen/px_20"
                        android:background="@drawable/login_btn_facebook" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_100"
                        android:text="@string/facebook_l"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                         />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_my_login_google"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_60"
                    android:layout_marginRight="@dimen/px_60"
                    android:layout_marginTop="@dimen/px_20"
                    android:background="@drawable/google_shape"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px_20"
                        android:layout_marginLeft="@dimen/px_50"
                        android:layout_marginTop="@dimen/px_20"
                        android:background="@drawable/login_btn_google" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_90"
                        android:text="@string/google_l"
                        android:textColor="@color/main_tab_defaule"
                        android:textSize="18sp"
                         />
                </LinearLayout>


            </LinearLayout>

    <!--登录界面-->
    <LinearLayout
        android:id="@+id/card_mylogin_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/white"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_loginx"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_color_black_v1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="@string/login_food"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_50"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/px_60"
            android:layout_marginRight="@dimen/px_60"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/card_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/px_90"
                android:paddingTop="@dimen/px_20"
                android:paddingBottom="@dimen/px_20"
                android:paddingRight="@dimen/px_90"
                android:text="@string/log_in"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@drawable/log_shape"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/card_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_20"
                android:paddingBottom="@dimen/px_20"
                android:paddingTop="@dimen/px_20"
                android:paddingLeft="@dimen/px_90"
                android:paddingRight="@dimen/px_90"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="@string/sign"
                android:background="@drawable/sign_shape"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_60"
                android:layout_marginRight="@dimen/px_60"
                >
                <com.app.whoot.ui.view.custom.ClearEditText
                    android:id="@+id/card_phone_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginRight="@dimen/px_60"
                    android:hint="@string/phone_email"
                    android:singleLine="true"
                    android:textSize="15sp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/px_30"
                    android:background="@color/item" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_60"
            android:layout_marginRight="@dimen/px_60"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <com.app.whoot.ui.view.custom.ClearEditText
                    android:id="@+id/card_pas_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:password="true"
                    android:singleLine="true"
                    android:hint="@string/password"
                    android:textSize="15sp"
                    />
            </android.support.design.widget.TextInputLayout>
            <ImageView
                android:id="@+id/card_new_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/px_10"
                android:layout_marginLeft="@dimen/px_10"
                android:background="@drawable/login_icon_hide"
                android:visibility="invisible"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/px_30"
            android:layout_marginLeft="@dimen/px_60"
            android:layout_marginRight="@dimen/px_60"
            android:background="@color/item" />
        <TextView
            android:id="@+id/card_time_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_sign_in_short"
            android:gravity="center"
            android:paddingTop="@dimen/px_25"
            android:layout_marginTop="@dimen/px_40"
            android:layout_marginBottom="@dimen/px_20"
            android:layout_marginLeft="@dimen/px_100"
            android:layout_marginRight="@dimen/px_100"
            android:paddingBottom="@dimen/px_25"
            android:textColor="@color/white"
            android:background="@drawable/login_deng"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_100"
            android:layout_marginRight="@dimen/px_100"
            android:layout_marginTop="@dimen/px_20"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/card_psw_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pas_regst"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/card_sign_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_30"
            android:gravity="center"
            android:text="@string/you_can"/>
        <ImageView
            android:id="@+id/card_face_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/px_30"
            android:background="@drawable/login_bn_facebook"/>
        <TextView
            android:id="@+id/card_my_login_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/px_20"
            android:layout_marginLeft="@dimen/px_60"
            android:layout_marginRight="@dimen/px_60"
            android:layout_marginBottom="@dimen/px_20"
            android:text=""/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/frag_facce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_80"
        android:layout_marginRight="@dimen/px_80"
        android:layout_marginTop="@dimen/px_100"
        android:background="@drawable/login_shape"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_20"
            android:layout_marginTop="@dimen/px_20"
            android:background="@drawable/login_btn_facebook" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:text="@string/facebook_l"
            android:textColor="@color/white" />
    </LinearLayout>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_e_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:visibility="gone" />

</LinearLayout>