<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/giftlink_opened_bg"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_d_btn_yesorno"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/brows_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/px_30"
                android:layout_weight="1"
                android:textColor="@color/login_color"
                android:text="确认"/>
            <TextView
                android:id="@+id/brows_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/px_30"
                android:textColor="@color/login_color"
                android:text="取消"/>
        </LinearLayout>

    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/white"
       android:gravity="center"
       android:visibility="gone"
       android:orientation="vertical">
       <ImageView
           android:id="@+id/box_img"
           android:layout_width="wrap_content"
           android:layout_gravity="center"
           android:layout_height="wrap_content" />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px_400"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_20"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/succ_off"/>


        <LinearLayout
            android:id="@+id/box_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/px_60"
            android:layout_marginBottom="@dimen/px_100"
            android:gravity="center"
            android:background="@drawable/bootpage_btn"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/px_100"
                android:layout_marginRight="@dimen/px_100"

                android:text="@string/cha"
                android:layout_marginBottom="@dimen/px_10"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:id="@+id/vox_finsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="@dimen/px_30"
        android:background="@drawable/popup_icon_close"/>
</LinearLayout>