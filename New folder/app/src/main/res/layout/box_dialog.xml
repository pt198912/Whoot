<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/box_img_ly"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_700"
        android:background="@drawable/notice_update_fan"
        android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="0dp"
               android:layout_weight="1"/>
           <LinearLayout
               android:id="@+id/box_update"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:background="@drawable/log_shape"
               android:layout_marginBottom="@dimen/px_80"
               android:gravity="center"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/px_20"
                   android:layout_marginLeft="@dimen/px_120"
                   android:layout_marginRight="@dimen/px_120"
                   android:layout_marginTop="@dimen/px_20"
                   android:text="@string/update"
                   android:textColor="@color/white" />
           </LinearLayout>
       </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/vox_finsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px_30"
        android:background="@drawable/popup_icon_close" />
</LinearLayout>