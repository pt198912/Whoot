<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_back"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_40"
        android:layout_marginTop="@dimen/px_100"
        >
        <com.app.whoot.ui.view.custom.ClearEditText
            android:id="@+id/reward_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="true"
            android:textSize="13sp"
            android:layout_marginRight="@dimen/px_60"
            android:hint="@string/reward_enter"
            android:textColorHint="@color/card_cc"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/px_30"
            android:background="@color/item" />
    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/px_150"
        android:orientation="vertical">
        <TextView
            android:id="@+id/reward_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/determine"
            android:gravity="center"
            android:paddingTop="@dimen/px_15"
            android:layout_marginTop="@dimen/px_120"
            android:layout_marginBottom="@dimen/px_20"

            android:paddingBottom="@dimen/px_25"
            android:textColor="@color/white"
            android:background="@drawable/login_btn_one"/>
    </LinearLayout>
</LinearLayout>