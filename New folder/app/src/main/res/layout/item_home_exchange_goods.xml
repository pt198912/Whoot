<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="vertical"
    >
    <FrameLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_goods"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:riv_corner_radius="4dp"
            android:scaleType="centerCrop"
            app:riv_mutate_background="true"
            android:background="@drawable/home_blank_pic"
           />
        <ImageView
            android:id="@+id/iv_activity_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_tag_activity_cn"/>
    </FrameLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/color_434343"
        android:textSize="13sp"
        android:layout_marginTop="3dp"
        android:singleLine="true"
        android:ellipsize="end"/>
        <ImageView
            android:id="@+id/iv_token_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/token_icon_bronze"
            android:layout_marginTop="3dp"
            />
    </LinearLayout>

</LinearLayout>