<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/px_20"
        android:layout_marginBottom="@dimen/px_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/header_item_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginTop="@dimen/px_10"
            android:background="@drawable/home_shape"
            android:paddingLeft="@dimen/px_20"
            android:paddingRight="@dimen/px_20"
            android:text=""
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/px_4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/header_item_img0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/px_10"
                android:background="@drawable/icon_star_10" />

            <ImageView
                android:id="@+id/header_item_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/px_10"
                android:background="@drawable/icon_star_10" />

            <ImageView
                android:id="@+id/header_item_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/px_10"
                android:background="@drawable/icon_star_10" />

            <ImageView
                android:id="@+id/header_item_img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/px_10"
                android:background="@drawable/icon_star_10" />

            <ImageView
                android:id="@+id/header_item_img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/px_10"
                android:background="@drawable/icon_star_10" />
        </LinearLayout>

        <TextView
            android:id="@+id/header_item_score_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:layout_marginTop="@dimen/px_10"
            android:layout_weight="1"
            android:text="@string/home_item_fen" />

        <TextView
            android:id="@+id/header_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:layout_marginRight="@dimen/px_50"
            android:layout_marginTop="@dimen/px_10"
            android:text="" />
    </LinearLayout>
</LinearLayout>