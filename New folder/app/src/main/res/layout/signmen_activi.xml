<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <include layout="@layout/title_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_80"
        android:layout_marginTop="@dimen/px_60"
        android:layout_marginRight="@dimen/px_50"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name_pas"/>

     <android.support.design.widget.TextInputLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/px_40"
         >
      <com.app.whoot.ui.view.custom.ClearEditText
          android:id="@+id/smen_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@null"
          android:layout_marginRight="@dimen/px_60"
          android:singleLine="true"
          android:hint="@string/pro_name"
          />
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="@dimen/px_30"
          android:background="@color/item" />
     </android.support.design.widget.TextInputLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
       <android.support.design.widget.TextInputLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:layout_marginTop="@dimen/px_40">
      <com.app.whoot.ui.view.custom.ClearEditText
          android:id="@+id/smen_pas"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@null"
          android:password="true"
          android:singleLine="true"
          android:hint="@string/password"
          />
       </android.support.design.widget.TextInputLayout>
       <ImageView
           android:id="@+id/smen_pas_img"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="@dimen/px_30"
           android:layout_marginLeft="@dimen/px_20"
           android:background="@drawable/login_icon_hide"
           android:visibility="invisible"
           />
      </LinearLayout>
     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:layout_marginTop="@dimen/px_30"
         android:background="@color/item" />


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
       <android.support.design.widget.TextInputLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:layout_marginTop="@dimen/px_40">
       <com.app.whoot.ui.view.custom.ClearEditText
           android:id="@+id/smen_pasword"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@null"
           android:password="true"
           android:singleLine="true"
           android:hint="@string/confirm"
           />
       </android.support.design.widget.TextInputLayout>
       <ImageView
           android:id="@+id/smen_pasword_img"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="@dimen/px_30"
           android:layout_marginLeft="@dimen/px_20"
           android:background="@drawable/login_icon_hide"
           android:visibility="invisible"
           />
      </LinearLayout>


      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="@dimen/px_30"
          android:background="@color/item" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginTop="@dimen/px_40">
       <com.app.whoot.ui.view.custom.ClearEditText
           android:id="@+id/smen_invate"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@null"
           android:singleLine="true"
           android:hint="@string/invite_tex"
           />
      </android.support.design.widget.TextInputLayout>
     </LinearLayout>


     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:layout_marginTop="@dimen/px_30"
         android:background="@color/item" />



     <TextView
         android:id="@+id/smen_txt"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/px_50"
         android:text=""
         />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:orientation="vertical">

    <TextView
        android:id="@+id/smen_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign"
        android:gravity="center"
        android:paddingTop="@dimen/px_25"
        android:layout_marginTop="@dimen/px_120"
        android:layout_marginBottom="@dimen/px_20"
        android:paddingBottom="@dimen/px_25"
        android:textColor="@color/white"
        android:background="@drawable/login_btn_one"/>

     </LinearLayout>

    </LinearLayout>
</LinearLayout>