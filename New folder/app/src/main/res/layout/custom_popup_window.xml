<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/id_pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/title"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pop_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginTop="@dimen/px_20"
                android:text="@string/reset"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:layout_marginTop="@dimen/px_20"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/conditions"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/pop_deter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                android:layout_marginTop="@dimen/px_20"
                android:text="@string/determine"

                android:textColor="@color/white" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px_20"
                        android:layout_marginLeft="@dimen/px_20"
                        android:layout_marginTop="@dimen/px_30"
                        android:layout_weight="1"
                        android:text="@string/open"
                        android:textColor="@color/text_color_black_v1" />

                    <LinearLayout
                        android:id="@+id/custom_gender_mly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/px_30"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/custom_gender_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_10"

                            android:background="@drawable/me_gender_btn_n" />

                        <ImageView
                            android:id="@+id/custom_gender_img_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_10"
                            android:background="@drawable/me_gender_btn_h"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/item" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/itop"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px_20"
                        android:layout_marginLeft="@dimen/px_20"
                        android:layout_marginTop="@dimen/px_20"
                        android:text="@string/distance"
                        android:textColor="@color/text_color_black_v1" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_20"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/custom_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_20"
                        android:text="0km"
                        android:textColor="@color/title" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/custom_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/px_20"
                        android:text="2km"
                        android:textColor="@color/title" />
                </LinearLayout>

                <com.app.whoot.ui.view.custom.PopRangeSeekBar
                    android:id="@+id/pop_rang"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_marginRight="@dimen/px_20"
                    app:lineColorEdge="#D8D8D8"
                    app:lineColorSelected="#D0AD99"
                    app:max="2"

                    app:min="0"
                    app:reserve="1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/px_30"
                    android:background="@color/item" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/itop"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px_20"
                        android:layout_marginLeft="@dimen/px_20"
                        android:layout_marginTop="@dimen/px_20"
                        android:text="@string/consumption"
                        android:textColor="@color/text_color_black_v1" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_20"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/custom_con_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_20"
                        android:text="$10"
                        android:textColor="@color/title" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/custom_con_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/px_20"
                        android:text="$1000+"
                        android:textColor="@color/title" />
                </LinearLayout>


                <com.app.whoot.ui.view.custom.PopRangeSeekBar
                    android:id="@+id/pop_con"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_marginRight="@dimen/px_20"
                    app:lineColorEdge="#D8D8D8"
                    app:lineColorSelected="#D0AD99"
                    app:max="1000"
                    app:min="0"
                    app:reserve="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px_20"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_marginTop="@dimen/px_20"
                    android:text="@string/stars"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/itemre"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px_40"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_marginRight="@dimen/px_20"
                    android:layout_marginTop="@dimen/px_40"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/one_star"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/pop_shape"
                        android:gravity="center"
                        android:paddingBottom="@dimen/px_10"
                        android:paddingTop="@dimen/px_10"
                        android:text="@string/one_star" />

                    <TextView
                        android:id="@+id/twe_star"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/px_10"
                        android:layout_weight="1"
                        android:background="@drawable/pop_shape"
                        android:gravity="center"
                        android:paddingBottom="@dimen/px_10"
                        android:paddingTop="@dimen/px_10"
                        android:text="@string/twe_star" />

                    <TextView
                        android:id="@+id/three_star"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/px_10"
                        android:layout_weight="1"
                        android:background="@drawable/pop_shape"
                        android:gravity="center"
                        android:paddingBottom="@dimen/px_10"
                        android:paddingTop="@dimen/px_10"
                        android:text="@string/three_star" />

                    <TextView
                        android:id="@+id/fore_star"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/px_10"
                        android:layout_weight="1"
                        android:background="@drawable/pop_shape"
                        android:gravity="center"
                        android:paddingBottom="@dimen/px_10"
                        android:paddingTop="@dimen/px_10"
                        android:text="@string/fore_star" />

                    <TextView
                        android:id="@+id/five_star"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/px_10"
                        android:layout_weight="1"
                        android:background="@drawable/pop_shape"
                        android:gravity="center"
                        android:paddingBottom="@dimen/px_10"
                        android:paddingTop="@dimen/px_10"
                        android:text="@string/five_star" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/px_30"
                    android:background="@color/item" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/itop"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px_20"
                        android:layout_marginLeft="@dimen/px_20"
                        android:layout_marginTop="@dimen/px_20"
                        android:text="@string/restaurant"
                        android:textColor="@color/text_color_black_v1" />
                </LinearLayout>

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/five_flowlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    app:max_select="-1" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>