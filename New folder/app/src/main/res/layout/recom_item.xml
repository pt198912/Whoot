<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px_20"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/recom_img"
            android:layout_width="@dimen/px_250"
            android:layout_height="@dimen/px_150"
            android:background="@drawable/storedetail_top5_blank_pic"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:orientation="vertical">
            <TextView
                android:id="@+id/recom_txtx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_black_v1"
                android:singleLine="true"
                android:layout_marginTop="-3dp"
                android:ellipsize="end"
                android:textSize="16sp"
                android:text="hahhahahahhahaha"/>
            <TextView
                android:id="@+id/recom_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_black_v2"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""/>
            <LinearLayout
                android:id="@+id/recom_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_30"
                    android:textColor="@color/text_color_black_v1"
                    android:textSize="16sp"
                    android:text="@string/jiaqian"/>
                <TextView
                    android:id="@+id/recom_txex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_30"
                    android:textSize="16sp"
                    android:textColor="@color/nh_percent"
                    android:text="#80"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>