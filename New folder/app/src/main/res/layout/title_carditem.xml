<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_70"
        android:layout_marginBottom="@dimen/px_10"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/title_carditem_fl"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginBottom="@dimen/px_10"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:background="@drawable/topnav_icon_orange_back"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_carditem_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/px_20"
                android:textColor="@color/text_color_black_v1"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="兑换记录"/>
        </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_30"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/title_carditem_shou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/px_30"
                    android:visibility="gone"
                    android:background="@drawable/storedetail_topnav_icon_collect_normal"/>
                <ImageView
                    android:id="@+id/title_carditem_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/px_30"
                    android:background="@drawable/storedetail_topnav_icon_collect_selected"/>
                <ImageView
                    android:id="@+id/title_carditem_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:background="@drawable/storedetail_topnav_icon_share"/>
            </LinearLayout>

    </LinearLayout>
</LinearLayout>