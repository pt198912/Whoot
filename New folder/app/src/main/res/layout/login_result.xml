<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/gift_bg_success">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:textSize="18sp"
           android:layout_marginTop="@dimen/px_50"
           android:textColor="@color/white"
           android:text="@string/fail_me"/>
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/px_100"
           android:layout_centerHorizontal="true"
           android:background="@drawable/scanning_pic_success_nologin"
           >

       </ImageView>
   </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/text_color_black_v1"
        android:layout_marginTop="@dimen/px_20"
        android:text="@string/log"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


    <LinearLayout
        android:id="@+id/result_facce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_80"
        android:layout_marginRight="@dimen/px_80"
        android:layout_marginTop="@dimen/px_150"
        android:background="@drawable/login_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_20"
            android:layout_marginTop="@dimen/px_20"
            android:background="@drawable/login_btn_facebook" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:text="@string/facebook_l"
            android:textSize="17sp"
            android:textColor="@color/white" />
    </LinearLayout>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_me_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:visibility="gone"
        android:layout_marginTop="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/result_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="@dimen/px_40"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/px_20"
            android:textColor="@color/text_color_black_v3"
            android:textSize="18sp"

            android:text="@string/login_o"/>
    </LinearLayout>
</LinearLayout>