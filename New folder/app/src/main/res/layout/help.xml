<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/help_ly_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginTop="@dimen/px_20"
                android:layout_marginBottom="@dimen/px_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/help_title"
                    android:textColor="@color/text_color_black_v1"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/help_ly_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/px_30"
                    android:background="@drawable/storedetail_icon_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="@dimen/px_10"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/help_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_30"
                    android:textColor="@color/illust"
                    android:layout_marginTop="@dimen/px_30"
                    android:text="@string/help_txt_one"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_30"
                    android:textColor="@color/illust"
                    android:layout_marginTop="@dimen/px_30"
                    android:layout_marginRight="@dimen/px_30"
                    android:text="@string/help_txt_twe"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_10"
                    android:layout_gravity="center"
                    android:background="@drawable/help_img"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_30"
                    android:textColor="@color/illust"
                    android:layout_marginTop="@dimen/px_30"
                    android:layout_marginRight="@dimen/px_30"
                    android:text="@string/help_txt_three"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/help_ly_twe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginTop="@dimen/px_20"
                android:layout_marginBottom="@dimen/px_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/help_title1"
                    android:textColor="@color/text_color_black_v1"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/help_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/px_30"
                    android:background="@drawable/storedetail_icon_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="@dimen/px_10"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/help_txt_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_30"
                    android:textColor="@color/illust"
                    android:layout_marginTop="@dimen/px_30"
                    android:layout_marginRight="@dimen/px_30"
                    android:text="@string/help_txt_1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_30"
                    android:textColor="@color/illust"
                    android:layout_marginTop="@dimen/px_30"
                    android:layout_marginRight="@dimen/px_30"
                    android:text="@string/help_txt_2"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_10"
                    android:layout_gravity="center"
                    android:background="@drawable/help_img_one"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_30"
                    android:textColor="@color/illust"
                    android:layout_marginTop="@dimen/px_30"
                    android:layout_marginRight="@dimen/px_30"
                    android:text="@string/help_txt_3"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_10"
                    android:layout_gravity="center"
                    android:background="@drawable/help_img_one"
                    android:layout_marginBottom="@dimen/px_20"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>