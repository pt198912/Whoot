<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title_back"/>
    <ImageView
        android:id="@+id/dish_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_blank_pic" />

    <TextView
        android:id="@+id/dish_txt"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginTop="@dimen/px_30"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_black_v1"
        android:text="苹果"/>

    <LinearLayout
        android:id="@+id/dish_mon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dish_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_color_black_v1"
            android:text="@string/jiaqian" />

        <TextView
            android:id="@+id/dish_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:textColor="@color/nh_percent"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/px_30"
        android:background="@color/itemre" />

    <TextView
        android:id="@+id/dish_xiang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/miao" />

    <TextView
        android:id="@+id/dish_dis"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/px_30"
        android:textSize="16sp"
        android:textColor="@color/text_color_black_v1"
        android:layout_height="wrap_content" />
</LinearLayout>