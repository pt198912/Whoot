<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"

    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_10"
        android:orientation="horizontal">

        <com.app.whoot.ui.view.custom.RoundImageView
            android:id="@+id/store_hera_round"
            android:layout_width="@dimen/px_60"
            android:layout_height="@dimen/px_60"
            android:layout_centerVertical="true"
            android:background="@drawable/me_default_photo"
            app:type="round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginTop="@dimen/px_6"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/store_hera_txview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxEms="11"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_color_black_v1"
                android:text="hahahhahah" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/store_hera_img0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_star_10" />

                <ImageView
                    android:id="@+id/store_hera_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_10"
                    android:background="@drawable/icon_star_10" />

                <ImageView
                    android:id="@+id/store_hera_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_10"
                    android:background="@drawable/icon_star_10" />

                <ImageView
                    android:id="@+id/store_hera_img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_10"
                    android:background="@drawable/icon_star_10" />

                <ImageView
                    android:id="@+id/store_hera_img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_10"
                    android:background="@drawable/icon_star_10" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/store_hera_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px_20"
                    android:text="2017-12-20 14:30" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/store_hera_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_100"

        android:layout_marginBottom="@dimen/px_10"
        android:textColor="@color/text_color_black_v2"
        android:textSize="16sp"
         />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/store_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_90"
        android:layout_marginRight="@dimen/px_20"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/store_hera_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/store_hera_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_10"
            android:background="@drawable/icon_bronze" />

        <TextView
            android:id="@+id/store_hera_tet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_20"
            android:text="X1" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginTop="@dimen/px_10"
        android:text="Redeem for:pork"
        android:textSize="16sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_90"
        android:background="@drawable/store_shape"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginBottom="@dimen/px_20"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/store_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:padding="@dimen/px_14"
            android:text=""/>
        <ImageView
            android:id="@+id/store_item_token"
            android:layout_width="@dimen/px_40"
            android:layout_height="@dimen/px_40"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/px_20"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/store_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:text="x1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_hera_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_90"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/px_20"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_hera_z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reply"
                android:textColor="@color/title"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/store_hera_zx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_20"
                android:text="2017-12-21 15:32" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_hera_tz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>